# Docker Compose Environment Variables
# Copy this file to .env and fill in your values
#
# For development: Use localhost URLs
# For production: Use your domain and secure passwords

# Database Configuration (for docker-compose.prod.yml)
POSTGRES_USER=atu_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=atu_ekartoteka
POSTGRES_PORT=5432

# Database Read Replicas (optional, comma-separated list)
# Enables automatic read query routing to replica databases for improved performance
# Example: DATABASE_REPLICA_URLS="postgresql://user:pass@replica1:5432/db,postgresql://user:pass@replica2:5432/db"
DATABASE_REPLICA_URLS=""

# Application Configuration (for docker-compose.prod.yml)
APP_PORT=3000
APP_IMAGE=ghcr.io/nasus20202/atu-ekartoteka:latest

# NextAuth Configuration (REQUIRED)
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# Email Configuration (REQUIRED for email functionality)
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="ATU Ekartoteka"
SMTP_HOST="smtp.example.com"
SMTP_PORT="465" # or 587
SMTP_SECURE="true"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"

# Application URL (REQUIRED for email links)
# Development: http://localhost:3000
# Production: https://your-domain.com
APP_URL="http://localhost:3000"

# Cron Job Secret (optional, for securing cron endpoints)
CRON_SECRET="your-cron-secret-key"

# Tracking Script (optional)
# Add your custom tracking/analytics script here (e.g., Plausible, Umami, Google Analytics)
# Example for Plausible:
# TRACKING_SCRIPT="var script=document.createElement('script');script.defer=true;script.dataset.domain='yourdomain.com';script.src='https://plausible.io/js/script.js';document.head.appendChild(script);"
# Example for Umami:
# TRACKING_SCRIPT="var script=document.createElement('script');script.defer=true;script.dataset.websiteId='your-website-id';script.src='https://analytics.umami.is/script.js';document.head.appendChild(script);"
TRACKING_SCRIPT=""

# Cloudflare Turnstile (Captcha) Keys
# Client site key (used in the browser) - server-side only
TURNSTILE_SITE_KEY="0x000000000000000000000000000000000000"
# Server secret key (used for server-side verification)
TURNSTILE_SECRET_KEY="0x000000000000000000000000000000000000"

# Google OAuth Configuration
# Get these from Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
