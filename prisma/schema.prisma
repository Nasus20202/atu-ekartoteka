// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum AuthMethod {
  CREDENTIALS
  GOOGLE
}

enum UserRole {
  ADMIN
  TENANT
}

enum AccountStatus {
  PENDING    // Waiting for approval
  APPROVED   // Approved by admin
  REJECTED   // Rejected
}

model HomeownersAssociation {
  id          String   @id @default(cuid())
  externalId  String   @unique  // ID from folder structure
  name        String              // defaults to externalId, can be changed by admin
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  apartments  Apartment[]
  
  @@index([externalId])
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  password       String?
  name           String?
  role           UserRole @default(TENANT)
  status         AccountStatus @default(PENDING)
  emailVerified  Boolean  @default(false)
  authMethod     AuthMethod? @default(CREDENTIALS)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relationship with apartments (one-to-many: one user can own multiple apartments)
  apartments         Apartment[]
  emailVerifications EmailVerification[]
  passwordResets     PasswordReset[]
  
  @@index([email])
  @@index([role])
  @@index([status])
  @@index([emailVerified])
}

model Apartment {
  id                  String   @id @default(cuid())
  externalOwnerId     String       // Owner ID from file (e.g. "W00164")
  externalApartmentId String       // Apartment ID from HOA system (e.g. "KLO11-KLO11-00000-00004M")
  owner         String?            // owner
  email         String?            // owner email
  address       String?            // street
  building      String?            // building number
  number        String             // apartment number (can be "3A")
  postalCode    String?
  city          String?
  shareNumerator        Float?             // numerator of ownership share
  shareDenominator      Float?             // denominator of ownership share
  
  // Activity status
  isActive    Boolean  @default(true)  // whether apartment is in current file
  
  // Homeowners' Association relation
  homeownersAssociation   HomeownersAssociation @relation(fields: [homeownersAssociationId], references: [id])
  homeownersAssociationId String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relationship with user (many-to-one: each apartment belongs to one user)
  user        User?   @relation(fields: [userId], references: [id])
  userId      String?
  
  // Charges for this apartment
  charges               Charge[]
  chargeNotifications   ChargeNotification[]
  payments              Payment[]
  
  @@unique([externalOwnerId, externalApartmentId])
  @@index([externalOwnerId])
  @@index([externalApartmentId])
  @@index([isActive])
  @@index([homeownersAssociationId])
  @@index([userId])
}

model Charge {
  id              String   @id @default(cuid())
  externalLineNo  Int      // line number from file
  
  // Apartment relation
  apartment       Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId     String
  
  // Dates and period
  dateFrom        DateTime
  dateTo          DateTime
  period          String   // e.g. "202501"
  
  // Charge details
  description     String
  quantity        Float
  unit            String   // e.g. "szt", "m2"
  unitPrice       Float
  totalAmount     Float
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([apartmentId, period, externalLineNo])
  @@index([apartmentId])
  @@index([period])
  @@index([dateFrom])
}

model ChargeNotification {
  id              String   @id @default(cuid())
  lineNo          Int      // position in file
  
  // Apartment relation
  apartment       Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId     String
  
  // Charge details
  description     String
  quantity        Float
  unit            String   // e.g. "szt.", "m2"
  unitPrice       Float
  totalAmount     Float
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([apartmentId, lineNo])
  @@index([apartmentId])
}

model Payment {
  id              String   @id @default(cuid())
  
  // Apartment relation
  apartment       Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId     String
  
  // Period information
  year            Int
  dateFrom        DateTime
  dateTo          DateTime
  
  // Balances
  openingBalance  Float
  closingBalance  Float
  
  // Monthly payments (12 months)
  januaryPayments         Float    @default(0)
  februaryPayments        Float    @default(0)
  marchPayments           Float    @default(0)
  aprilPayments           Float    @default(0)
  mayPayments             Float    @default(0)
  junePayments            Float    @default(0)
  julyPayments            Float    @default(0)
  augustPayments          Float    @default(0)
  septemberPayments       Float    @default(0)
  octoberPayments         Float    @default(0)
  novemberPayments        Float    @default(0)
  decemberPayments        Float    @default(0)
  
  // Monthly charges (12 months)
  januaryCharges   Float    @default(0)
  februaryCharges  Float    @default(0)
  marchCharges     Float    @default(0)
  aprilCharges     Float    @default(0)
  mayCharges       Float    @default(0)
  juneCharges      Float    @default(0)
  julyCharges      Float    @default(0)
  augustCharges    Float    @default(0)
  septemberCharges Float    @default(0)
  octoberCharges   Float    @default(0)
  novemberCharges  Float    @default(0)
  decemberCharges  Float    @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([apartmentId, year])
  @@index([apartmentId])
  @@index([year])
}

model EmailVerification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  code      String   @unique
  expiresAt DateTime
  verified  Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([code])
  @@index([expiresAt])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}
