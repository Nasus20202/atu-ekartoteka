// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  TENANT
}

enum AccountStatus {
  PENDING    // Waiting for approval
  APPROVED   // Approved by admin
  REJECTED   // Rejected
}

model HomeownersAssociation {
  id          String   @id @default(cuid())
  externalId  String   @unique  // ID from folder structure
  name        String              // defaults to externalId, can be changed by admin
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  apartments  Apartment[]
  
  @@index([externalId])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      UserRole @default(TENANT)
  status    AccountStatus @default(PENDING)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relationship with apartments (one-to-many: one user can own multiple apartments)
  apartments  Apartment[]
  
  @@index([email])
  @@index([role])
  @@index([status])
}

model Apartment {
  id          String   @id @default(cuid())
  externalId  String   @unique  // e.g. "W00016"
  owner       String?            // owner
  address     String?            // street
  building    String?            // building number
  number      String             // apartment number (can be "3A")
  postalCode  String?
  city        String?
  area        Float?             // surface area
  height      Float?             // height (from lokal_ost_wys.wmb)
  
  // Activity status
  isActive    Boolean  @default(true)  // whether apartment is in current file
  
  // Homeowners' Association relation
  homeownersAssociation   HomeownersAssociation @relation(fields: [homeownersAssociationId], references: [id])
  homeownersAssociationId String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relationship with user (many-to-one: each apartment belongs to one user)
  user        User?   @relation(fields: [userId], references: [id])
  userId      String?
  
  // Charges for this apartment
  charges     Charge[]
  
  @@index([externalId])
  @@index([isActive])
  @@index([homeownersAssociationId])
  @@index([userId])
}

model Charge {
  id              String   @id @default(cuid())
  externalId      String   // from original file
  externalLineNo  Int      // line number from file
  
  // Apartment relation
  apartment       Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId     String
  
  // Dates and period
  dateFrom        DateTime
  dateTo          DateTime
  period          String   // e.g. "202501"
  
  // Charge details
  description     String
  quantity        Float
  unit            String   // e.g. "szt", "m2"
  unitPrice       Float
  totalAmount     Float
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([apartmentId, period, externalLineNo])
  @@index([apartmentId])
  @@index([period])
  @@index([dateFrom])
}
