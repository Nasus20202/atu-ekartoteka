// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum AuthMethod {
  CREDENTIALS
  GOOGLE
}

enum UserRole {
  ADMIN
  TENANT
}

enum AccountStatus {
  PENDING    // Waiting for approval
  APPROVED   // Approved by admin
  REJECTED   // Rejected
}

model HomeownersAssociation {
  id          String   @id @default(cuid())
  externalId  String   @unique  // ID from folder structure
  name        String              // defaults to externalId, can be changed by admin
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  apartments  Apartment[]
  
  @@index([externalId])
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  password       String?
  name           String?
  role           UserRole @default(TENANT)
  status         AccountStatus @default(PENDING)
  emailVerified  Boolean  @default(false)
  authMethod     AuthMethod? @default(CREDENTIALS)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relationship with apartments (one-to-many: one user can own multiple apartments)
  apartments         Apartment[]
  emailVerifications EmailVerification[]
  passwordResets     PasswordReset[]
  
  @@index([email])
  @@index([role])
  @@index([status])
  @@index([emailVerified])
}

model Apartment {
  id          String   @id @default(cuid())
  externalId  String   @unique  // e.g. "W00016"
  owner       String?            // owner
  email       String?            // owner email
  address     String?            // street
  building    String?            // building number
  number      String             // apartment number (can be "3A")
  postalCode  String?
  city        String?
  shareNumerator        Float?             // numerator of ownership share (udział)
  shareDenominator      Float?             // denominator of ownership share (udział)
  
  // Activity status
  isActive    Boolean  @default(true)  // whether apartment is in current file
  
  // Homeowners' Association relation
  homeownersAssociation   HomeownersAssociation @relation(fields: [homeownersAssociationId], references: [id])
  homeownersAssociationId String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relationship with user (many-to-one: each apartment belongs to one user)
  user        User?   @relation(fields: [userId], references: [id])
  userId      String?
  
  // Charges for this apartment
  charges               Charge[]
  chargeNotifications   ChargeNotification[]
  payments              Payment[]
  
  @@index([externalId])
  @@index([isActive])
  @@index([homeownersAssociationId])
  @@index([userId])
}

model Charge {
  id              String   @id @default(cuid())
  externalId      String   // from original file
  externalLineNo  Int      // line number from file
  
  // Apartment relation
  apartment       Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId     String
  
  // Dates and period
  dateFrom        DateTime
  dateTo          DateTime
  period          String   // e.g. "202501"
  
  // Charge details
  description     String
  quantity        Float
  unit            String   // e.g. "szt", "m2"
  unitPrice       Float
  totalAmount     Float
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([apartmentId, period, externalLineNo, externalId])
  @@index([apartmentId])
  @@index([period])
  @@index([dateFrom])
}

model ChargeNotification {
  id              String   @id @default(cuid())
  externalId      String   // from pow_czynsz.txt
  lineNo          Int      // position in file
  
  // Apartment relation
  apartment       Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId     String
  
  // Charge details
  description     String
  quantity        Float
  unit            String   // e.g. "szt.", "m2"
  unitPrice       Float
  totalAmount     Float
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([apartmentId, lineNo, externalId])
  @@index([apartmentId])
}

model Payment {
  id              String   @id @default(cuid())
  externalId      String   // from wplaty.txt
  
  // Apartment relation
  apartment       Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId     String
  
  // Period information
  year            Int
  dateFrom        DateTime
  dateTo          DateTime
  
  // Balances
  openingBalance  Float    // saldo początkowe
  totalCharges    Float    // naliczenie
  closingBalance  Float    // saldo końcowe
  
  // Monthly payments (12 months)
  january         Float    @default(0)
  february        Float    @default(0)
  march           Float    @default(0)
  april           Float    @default(0)
  may             Float    @default(0)
  june            Float    @default(0)
  july            Float    @default(0)
  august          Float    @default(0)
  september       Float    @default(0)
  october         Float    @default(0)
  november        Float    @default(0)
  december        Float    @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([apartmentId, year, externalId])
  @@index([apartmentId])
  @@index([year])
}

model EmailVerification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  code      String   @unique
  expiresAt DateTime
  verified  Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([code])
  @@index([expiresAt])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}
