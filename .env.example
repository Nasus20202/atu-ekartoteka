# Database
DATABASE_URL="postgresql://atu_user:atu_password@localhost:5432/atu_ekartoteka?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# Node Environment
NODE_ENV="development"

# Email Configuration (SMTP)
# Works with AWS SES SMTP, Gmail, SendGrid, etc.
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="ATU Ekartoteka"
SMTP_HOST="your-smtp-host"
SMTP_PORT="465" # or 587
SMTP_SECURE="true" # true for 465, false for 587
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"

# Application URL (for email links)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Cron Job Secret (optional, for securing cron endpoints)
CRON_SECRET="your-cron-secret-key"

# Tracking Script (optional)
# Add your custom tracking/analytics script here (e.g., Plausible, Umami, Google Analytics)
# Example for Plausible:
# NEXT_PUBLIC_TRACKING_SCRIPT="var script=document.createElement('script');script.defer=true;script.dataset.domain='yourdomain.com';script.src='https://plausible.io/js/script.js';document.head.appendChild(script);"
# Example for Umami:
# NEXT_PUBLIC_TRACKING_SCRIPT="var script=document.createElement('script');script.defer=true;script.dataset.websiteId='your-website-id';script.src='https://analytics.umami.is/script.js';document.head.appendChild(script);"
NEXT_PUBLIC_TRACKING_SCRIPT=""

# Cloudflare Turnstile (Captcha) Keys
# Client site key (used in the browser) - must be prefixed with NEXT_PUBLIC_
NEXT_PUBLIC_TURNSTILE_SITE_KEY="0x000000000000000000000000000000000000"
# Server secret key (used for server-side verification)
TURNSTILE_SECRET_KEY="0x000000000000000000000000000000000000"

# Google OAuth Configuration
# Get these from Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
